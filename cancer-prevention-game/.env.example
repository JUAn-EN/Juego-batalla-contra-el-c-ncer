# ============================================
# VARIABLES DE ENTORNO - VITAGUARD HEROES
# ============================================

# Puerto del servidor
PORT=3000

# Entorno de ejecución (development, production, test)
NODE_ENV=development

# Configuración de la base de datos (para futuro uso)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=vitaguard_heroes
DB_USER=vitaguard_user
DB_PASSWORD=tu_password_aqui

# JWT Secret (para autenticación futura)
JWT_SECRET=tu_jwt_secret_muy_seguro_aqui
JWT_EXPIRE=24h

# Configuración de CORS
CORS_ORIGIN=http://localhost:3000

# Configuración de logging
LOG_LEVEL=info

# Configuración de la aplicación
APP_NAME=VitaGuard Heroes
APP_VERSION=1.0.0

# URLs de recursos externos (opcional)
CANCER_API_URL=https://api.cancer.org
HEALTH_TIPS_API=https://api.healthtips.com

# Configuración de email (para futuras notificaciones)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=vitaguard@gmail.com
EMAIL_PASSWORD=tu_email_password

# Configuración de analíticas (Google Analytics, etc.)
ANALYTICS_ID=GA-XXXXXXXXX

# Configuración de redes sociales
SOCIAL_FACEBOOK_APP_ID=tu_facebook_app_id
SOCIAL_TWITTER_API_KEY=tu_twitter_api_key

# Rate limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# Configuración de sesiones
SESSION_SECRET=tu_session_secret_aqui
SESSION_TIMEOUT=86400000

# Debug y desarrollo
DEBUG_MODE=true
VERBOSE_LOGGING=false